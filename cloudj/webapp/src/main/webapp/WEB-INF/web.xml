<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>cloudj</display-name>
    <!--
        ContextFilter per thread context.
    -->
    <filter>
        <filter-name>ContextFilter</filter-name>
        <filter-class>org.phnq.core.webapp.ContextFilter</filter-class>
        <init-param>
            <param-name>context-class</param-name>
            <param-value>org.phnq.cloudj.app.CloudjContext</param-value>
        </init-param>
        <init-param>
            <param-name>context-cookie</param-name>
            <param-value>cloudj</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ContextFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--
        HttpLoggingFilter logs all http traffic.
    -->
    <filter>
        <filter-name>HttpLoggingFilter</filter-name>
        <filter-class>org.phnq.core.util.logging.HttpLoggingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HttpLoggingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>JSONPFilter</filter-name>
        <filter-class>org.phnq.phnqlets.pdk.JSONPFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JSONPFilter</filter-name>
        <servlet-name>PhnqletsDispatcher</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>PhnqletsDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:pdk-config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhnqletsDispatcher</servlet-name>
        <url-pattern>/phnqlets/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>APIDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:api-config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>APIDispatcher</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
